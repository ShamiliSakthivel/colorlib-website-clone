 @{

   Layout = "_Layout";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .contact-info {
            color: black;
        }

        h2 {
            margin-left: 10px;
            line-height: 1.5;
            color: black;
            font-family: "Roboto", Arial, sans-serif;
        }

        .contact-column {
            flex: 1;
            padding: 5px;
            margin: 5px;
        }

        .contact-details {
            color: grey;
        }

        a {
            color: grey;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .column {
            flex: 1;
        }

        .error-column {
            background-color: #f2f2f2;
            text-align: center;
            padding: 20px;
        }

        .error-text {
            color: grey;
            text-align: center;
        }

        .error-image {
            text-align: center;
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .form-column {
            background-color: white;
            padding: 20px;
            border: 1px solid grey;
            border-radius: 5px;
        }

        input[type="text"],
        input[type="email"],
        textarea {
            width: calc(100% - 20px);
            margin-bottom: 10px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 3px;
            cursor: pointer;
        }

        .main-div {
            background-color: #e0e8f4;
            display: flex;
            justify-content: space-between;
            padding: 20px;
        }

        .columns {
            flex: 1;
            padding: 10px;
        }

        h3 {
            font-size: 18px;
            color: blue;
        }

        h4 {
            color: black;
        }

        .content-list {
            list-style-type: none;
            padding: 0;
            color: gray;
            font-family: "Roboto", Arial, sans-serif;
        }

            .content-list li {
                margin-bottom: 5px;
                color: gray;
                font-family: "Roboto", Arial, sans-serif;
            }

        .quick-links li {
            list-style: none;
            color: gray;
            font-family: "Roboto", Arial, sans-serif;
            font-size: 16px;
            line-height: 1.8;
            font-weight: 400;
        }

        .recent-posts img {
            width: 50px;
            height: 50px;
            margin-right: 10px;
            color: gray;
            font-family: "Roboto", Arial, sans-serif;
            font-size: 16px;
            line-height: 1.8;
            font-weight: 400;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="about-us-section">
            <h2 style="font-weight: 300;
                color: #fff;
               font-size: 60px;
               margin-right:60px;
               margin-left:450px;
               text-align:center;
               margin-top:200px;
               margin-bottom:300px">
                Contact  Us
            </h2>
        </div>
    </div>
    <br />
    <br />
    <div class="contact-info">
        <h2>Contact Information</h2>
        <div style="display: flex; flex-direction: row;">
            <div class="contact-column">
                <p class="contact-details"><strong>Address:</strong> 198 West 21st Street, Suite 721, New York, NY 10016</p>
            </div>
            <div class="contact-column">
                <p class="contact-details"><strong>Phone:</strong> +1235 2355 98</p>
            </div>
            <div class="contact-column">
                <p class="contact-details"><strong>Email:</strong> info@yoursite.com</p>
            </div>
            <div class="contact-column">
                <p class="contact-details"><strong>Website:</strong> <a href="https://yoursite.com">yoursite.com</a></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="column error-column">
            <img class="error-image" src="https://maps.gstatic.com/mapfiles/api-3/images/icon_error.png" alt="Warning Image">
            <p class="error-text">Sorry! Something went wrong.</p>
            <p class="error-text">This page didn't load Google Maps correctly.</p>
        </div>
        <div class="column form-column">
            <form>
                <label for="name">Your Name:</label><br>
                <input type="text" id="name" name="name"><br>
                <label for="email">Your Email:</label><br>
                <input type="email" id="email" name="email"><br>
                <label for="subject">Subject:</label><br>
                <input type="text" id="subject" name="subject"><br>
                <label for="message">Message:</label><br>
                <textarea id="message" name="message" rows="4"></textarea><br>
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
    <br />
    <br />
    <br />
</body>
</html>
